<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="400"
        x:Class="DriversApp.MainWindow"
        Title="DriversApp">
	<StackPanel>
		<TextBlock HorizontalAlignment="Center" 
				   VerticalAlignment="Center"
				   FontSize="30"
				   Margin="20"
				   >Авторизация</TextBlock>
		<Grid RowDefinitions="Auto,auto" ColumnDefinitions="Auto, Auto, Auto" Margin="15"
			  HorizontalAlignment="Center">
			<TextBlock Grid.Column="1" Grid.Row="0" Margin="5" FontSize="20">Login</TextBlock>
			<TextBox Name="LoginTextBox" Grid.Column="2" Grid.Row="0" Margin="5" FontSize="20"></TextBox>
			<TextBlock Grid.Column="1" Grid.Row="1" Margin="5" FontSize="20">Password</TextBlock>
			<TextBox Name="PasswordTextBox" Grid.Column="2" Grid.Row="1" Margin="5" FontSize="20"></TextBox>
			
			
		</Grid>
		<Button HorizontalAlignment="Center"
				FontSize="20"
				Margin="10"
				Padding="10"
				Click="EnterClick">Войти</Button>
		<TextBlock Name="StatusMessage" 
				   Margin="10"
				   FontSize="20"
				   HorizontalAlignment="Center"></TextBlock>
	</StackPanel>
</Window>
